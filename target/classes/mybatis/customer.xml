<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="customer">
<!-- 내정보(이직자)보기 -->
	<select id="list" resultType="Customer">
		SELECT * FROM customer 
		WHERE customer_id=#{customerId}
	</select>
	
	<!-- 이직자 회원가입 -->
	<insert id="add">
		INSERT INTO customer
		(customer_id, customer_pw, customer_nnm)
		
		VALUES (#{customerId}, #{customerPw}, #{customerNnm})		
		<!-- Role(찜하기_스크랩)은 나중에.. -->
	</insert>
	
	
	<select id="item" resultType="Customer">
		SELECT * FROM customer
		WHERE customer_id=#{customerId}
	</select>
		
	<!-- 이직자 회원정보 변경 -->
	<update id="update">
		UPDATE customer
		SET customer_nnm=#{customerNnm}
		
		WHERE customer_id=#{customerId}
	</update>
	
	<!-- 이직자 회원탈퇴 -->
	<delete id="delete">
		DELETE FROM customer
		WHERE customer_id=#{customerId}
	</delete>
	
	<!-- 사용자가 입력한 패스워드 랑 암호화된 값과 같다면 같은 패스워드 를 얻어옴. -->
	<select id="login" resultType="Customer">
		SELECT * FROM customer
		WHERE customer_id=#{customerId} AND customer_pw=#{customerPw}
	</select>
</mapper>